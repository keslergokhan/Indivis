@model IResultDataControl<ReadPageWidgetDto>;
@using Indivis.Core.Application.Dtos.CoreEntityDtos.Widgets.Reads
@using Indivis.Core.Application.Interfaces.Results
@using Indivis.Presentation.WebUI.Widgets.Extensions;

@{
    Layout = null;
}
@{
    if (Model.IsSuccess)
    {
        <div>
            <div class="widget-buttons" >
                <button type="button" title="Widget Ayarlarını Güncelle" class="cms-btn js-update-widget">Güncelle</button>
                <button type="button" title="Widget Sil" class="cms-btn js-remove-widget">Sil</button>
                <div class="widget-order-buttons">
                    <button class="js-up-widget" data-page-widget-setting-id="@Model.Data.PageWidgetSettingId" title="Widget konumunu yukarı taşı" type="button">∧</button>
                    <button class="js-down-widget" data-page-widget-setting-id="@Model.Data.PageWidgetSettingId" title="Widget konumunu aşağı taşı" type="button">∨</button>
                </div>
            </div>
            @await Component.Widget(Model.Data)
        </div>
    }

}
